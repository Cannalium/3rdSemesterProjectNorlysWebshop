<!-- Identity-related Razor markup, including SignInManager and UserManager injections -->
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!-- Navigation menu with conditional display based on user authentication status -->
<ul class="navbar-nav">
    <!-- Display logout form if user is signed in -->
    <!-- Else display registration and login links if user is not signed in -->
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Log ud</button>
            </form>
        </li>
    }
    else
    {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registrer</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Product", "Product", new { area = "" })">Login</a>
    </li>
    }
</ul>

